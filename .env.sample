# --------------------------------
OMNIAUTH_ENTRAID_MOCK_AUTH_ENABLED=false
OMNIAUTH_ENTRAID_MOCK_USERNAME="<retrieve-from-secrets>"
OMNIAUTH_ENTRAID_MOCK_PASSWORD="<retrieve-from-secrets>"
OMNIAUTH_ENTRAID_CLIENT_ID="<retrieve-from-secrets>"
OMNIAUTH_ENTRAID_CLIENT_SECRET="<retrieve-from-secrets>"
OMNIAUTH_ENTRAID_REDIRECT_URI="https://localhost:3000/auth/entra_id/callback" # default redirect_uri is taken from EntraID unless supplied here, must be registered with EntraID regardless
OMNIAUTH_ENTRAID_TENANT_ID="<retrieve-from-secrets>"

LAA_LANDING_PAGE_TARGET_URL=<retrieve-from-secrets>

# --------------------------------
# Admin OMNIAUTH EntraID config
# --------------------------------
ADMIN_OMNIAUTH_ENTRAID_MOCK_AUTH_ENABLED=false
ADMIN_OMNIAUTH_ENTRAID_MOCK_USERNAME="<retrieve-from-secrets>"
ADMIN_OMNIAUTH_ENTRAID_MOCK_PASSWORD="<retrieve-from-secrets>"
ADMIN_OMNIAUTH_ENTRAID_CLIENT_ID="<retrieve-from-secrets>"
ADMIN_OMNIAUTH_ENTRAID_CLIENT_SECRET="<retrieve-from-secrets>"
ADMIN_OMNIAUTH_ENTRAID_TENANT_ID="<retrieve-from-secrets>"
ADMIN_OMNIAUTH_ENTRAID_REDIRECT_URI="https://localhost:3000/auth/admin_entra_id/callback" # default redirect_uri is taken from EntraID unless supplied here, must be registered with EntraID regardless

# --------------------------------
# CCMS user management API
# --------------------------------
CCMS_USER_API_URL="<retrieve-from-values>"
CCMS_USER_API_AUTH_KEY="<retrieve-from-secrets>"

# ---------------------------------
# Data access API (a.k.a datastore)
# ---------------------------------
DATA_ACCESS_API_URL="<retrieve-from-values>"

# Time, in minutes, that a user's authentication session remains
# active. When the lifetime is reached the session expires
REAUTHENTICATE_AFTER_MINUTES=1440
IDLE_TIMEOUT_AFTER_MINUTES=60

