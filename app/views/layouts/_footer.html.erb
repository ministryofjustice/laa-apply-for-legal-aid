<footer class="govuk-footer no-print" role="contentinfo">
  <div class="govuk-width-container ">
    <div class="govuk-footer__meta">
      <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">

        <h2 class="govuk-visually-hidden"><%= t('layouts.application.footer.support') %></h2>
        <ul class="govuk-footer__inline-list">
          <li class="govuk-footer__inline-list-item">
            <%= link_to_accessible t('layouts.application.footer.contact'), contact_path, class: 'govuk-footer__link' %>
          </li>

          <li class="govuk-footer__inline-list-item">
            <%= link_to_accessible t('layouts.application.footer.feedback'), new_feedback_path, class: 'govuk-footer__link' %>
          </li>

          <li class="govuk-footer__inline-list-item">
<!--      Currently we can only update and store cookie preferences for the provider, citizen users are shown the generic GOV.UK cookies page -->
            <% if current_provider %>
              <%= link_to_accessible t('layouts.application.footer.cookies'), providers_cooky_path(current_provider), class: 'govuk-footer__link' %>
            <% else %>
              <%= link_to_accessible t('layouts.application.footer.cookies'), "https://www.gov.uk/help/cookies", class: 'govuk-footer__link' %>
            <% end %>
          </li>

          <li class="govuk-footer__inline-list-item">
            <%= link_to_accessible t('layouts.application.footer.privacy_policy'), privacy_policy_index_path, class: 'govuk-footer__link' %>
          </li>

          <li class="govuk-footer__inline-list-item">
            <%= link_to_accessible t('layouts.application.footer.accessibility_statement'), accessibility_statement_index_path, class: 'govuk-footer__link' %>
          </li>

          <li class="govuk-footer__inline-list-item">
              <!-- TO DO differs between provider/citizen -->
            <%= link_to_accessible  t('layouts.application.footer.terms'), "https://www.gov.uk/government/publications/laa-online-portal-help-and-information", class: 'govuk-footer__link' %>
          </li>

          <li class="govuk-footer__inline-list-item">
            <%= link_to_accessible t('layouts.application.footer.digital_services_html'), "https://mojdigital.blog.gov.uk/", class: 'govuk-footer__link' %>
          </li>
        </ul>

        <svg class="govuk-footer__licence-logo" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 483.2 195.7" height="17" width="41">
          <path fill="currentColor" d="M421.5 142.8V.1l-50.7 32.3v161.1h112.4v-50.7zm-122.3-9.6A47.12 47.12 0 0 1 221 97.8c0-26 21.1-47.1 47.1-47.1 16.7 0 31.4 8.7 39.7 21.8l42.7-27.2A97.63 97.63 0 0 0 268.1 0c-36.5 0-68.3 20.1-85.1 49.7A98 98 0 0 0 97.8 0C43.9 0 0 43.9 0 97.8s43.9 97.8 97.8 97.8c36.5 0 68.3-20.1 85.1-49.7a97.76 97.76 0 0 0 149.6 25.4l19.4 22.2h3v-87.8h-80l24.3 27.5zM97.8 145c-26 0-47.1-21.1-47.1-47.1s21.1-47.1 47.1-47.1 47.2 21 47.2 47S123.8 145 97.8 145" />
        </svg>
        <span class="govuk-footer__licence-description">
          <%= t('layouts.application.footer.span_text_1') %>
          <%= link_to_accessible t('layouts.application.footer.open_gov_link_text'), "https://www.nationalarchives.gov.uk/doc/open-government-licence/version/3/", class: 'govuk-footer__link', rel: 'license' %>
          <%= t('layouts.application.footer.span_text_2') %>
        </span>
      </div>
      <div class="govuk-footer__meta-item">
        <%= link_to_accessible "Â© #{t('layouts.application.footer.copyright')}", "https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/uk-government-licensing-framework/crown-copyright/", class: 'govuk-footer__link govuk-footer__copyright-logo' %>
      </div>
    </div>
  </div>
</footer>
