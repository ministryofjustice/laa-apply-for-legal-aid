<%= form_with(model: @additional_account_form,
              url: citizens_additional_accounts_path,
              method: :post,
              local: true) do |form| %>
    <%= page_template page_title: t('.header'), form: form, template: :basic do %>

      <%= form.govuk_collection_radio_buttons :additional_account,
                                            yes_no_options,
                                            :value,
                                            :label,
                                            hint: {text: t('.hint')},
                                            legend: {text: content_for(:page_title), tag: 'h1', size: 'xl'} %>

    <%= next_action_buttons(form: form) %>
  <% end %>
<% end %>
