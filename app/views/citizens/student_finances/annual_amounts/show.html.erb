<%= form_with(model: @form,
              url: citizens_student_finances_annual_amount_path,
              method: :patch, local: true) do |form| %>
  <%= page_template page_title: t('.field_set_header'), form: form, template: :basic do %>

    <%= form.govuk_text_field(
            :amount,
            hint: {text: t('.hint')},
            label: {text: page_title, size: 'xl', tag: 'h1'},
            prefix_text: t('currency.gbp'),
            width: 'one-quarter'
        ) %>

    <%= next_action_buttons(
            form: form,
            continue_button_text: t('generic.save_and_continue')
        ) %>
  <% end %>
<% end %>
