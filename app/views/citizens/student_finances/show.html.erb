<%= form_with(model: @form,
              url: citizens_student_finance_path,
              method: :patch, local: true) do |form| %>
  <%= page_template page_title: t('.field_set_header'), form: form, template: :basic do %>

    <%= form.govuk_collection_radio_buttons :student_finance,
                                            yes_no_options,
                                            :value,
                                            :label,
                                            hint: {text: t('.hint')},
                                            legend: {text: content_for(:page_title), tag: 'h1', size: 'xl'} %>

    <%= next_action_buttons(form: form) %>
  <% end %>
<% end %>
