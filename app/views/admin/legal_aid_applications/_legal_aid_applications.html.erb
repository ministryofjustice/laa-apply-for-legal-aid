<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <%= govuk_table do |table|
          table.with_caption(text: t(".latest_applications"))

          table.with_head do |head|
            head.with_row do |row|
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.applicant_name"))
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.created_at"))
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.application_ref"))
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.status"))
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.provider_username"))
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.action"))
              row.with_cell(text: t("admin.legal_aid_applications.legal_aid_applications.submission_data"))
            end
          end

          table.with_body do |body|
            @applications.each do |application|
              body.with_row do |row|
                row.with_cell(text: application.applicant_full_name || t("generic.undefined"))
                row.with_cell(text: l(application.created_at.to_date, format: :long_date))
                row.with_cell(text: application.application_ref)
                row.with_cell(text: t(application.state, scope: %i[enums legal_aid_application state]))
                row.with_cell(text: mail_to(application.provider.email, application.provider.username))
                row.with_cell do
                  t("admin.legal_aid_applications.legal_aid_applications.discarded", date: application.discarded_at.strftime("%d-%m-%Y")) if application.discarded?

                  if destroy_enabled?
                    govuk_button_to(
                      t("admin.legal_aid_applications.legal_aid_applications.delete"),
                      admin_legal_aid_application_path(application.id),
                      warning: true,
                      method: :delete,
                      class: "request-delete-button",
                      "data-application-id": application.id,
                      "data-original-text": t("admin.legal_aid_applications.legal_aid_applications.delete"),
                      "data-delete-name": "#{t('admin.legal_aid_applications.legal_aid_applications.applicant_name')}: #{application.applicant_full_name || t('generic.undefined')}",
                      "data-delete-ref": "#{t('admin.legal_aid_applications.legal_aid_applications.application_ref')}: #{application.application_ref}",
                      "data-delete-message": t("admin.legal_aid_applications.legal_aid_applications.warning.delete"),
                    )
                  end
                end
                row.with_cell do
                  govuk_button_link_to(t("admin.legal_aid_applications.legal_aid_applications.data_view_html", application_ref: application.application_ref), admin_legal_aid_applications_submission_path(application))
                end
              end
            end
          end
        end %>

    <%= render "shared/partials/pagination", pagy: @pagy %>

  </div>
</div>
