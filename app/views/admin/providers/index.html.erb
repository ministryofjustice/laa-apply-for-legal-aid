<% title = @firm.present? ? t(".heading_1", firm_name: @firm.name) : t(".all_firms_heading_1") %>

<%= page_template(
      page_title: title,
      back_link: :none,
    ) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <%= govuk_table do |table|
          table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: title)

          table.with_head do |head|
            head.with_row do |row|
              row.with_cell(text: t("generic.username"))
              row.with_cell(text: t("generic.email_address"))
            end
          end

          table.with_body do |body|
            @providers.each do |provider|
              body.with_row do |row|
                row.with_cell(text: provider.username)
                row.with_cell(text: provider.email)
              end
            end
          end
        end %>

  </div>
</div>
