<%= form_with(model: @provider, url: admin_provider_check_path, local: true) do |form| %>

  <%= form.govuk_text_field(
          :username,
          label: {text: label_tag(t('.heading_1'), page_title), tag: 'h1', size: 'xl'},
          hint: {text: controller_t('hint.username')},
          value: @provider.username,
          width: 'one-third'
      ) %>

  <%= next_action_buttons(
          show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
          form: form
      ) %>

<% end %>
