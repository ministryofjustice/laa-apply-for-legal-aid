<%= page_template page_title: t('.heading_1'), back_link: :none do %>
  <%= form_with(
        model: @form,
        url: admin_settings_path,
        method: :patch,
        local: true
      ) do |form| %>

    <%= form.govuk_collection_radio_buttons(
          :mock_true_layer_data,
          [true, false],
          inline: true,
          hint: t('.hints.mock_true_layer_data', bank_transaction_filename: Setting.bank_transaction_filename),
          title: { size: :m, text: t('.labels.mock_true_layer_data') }
        ) %>

    <%= form.govuk_collection_radio_buttons(
          :allow_non_passported_route,
          [true, false],
          inline: true,
          hint: t('.hints.allow_non_passported_route'),
          title: { size: :m, text: t('.labels.allow_non_passported_route') }
        ) if Rails.configuration.x.allow_non_passported_route %>

    <%= form.govuk_collection_radio_buttons(
      :manually_review_all_cases,
      [true, false],
      inline: true,
      hint: t('.hints.manually_review_all_cases'),
      title: { size: :m, text: t('.labels.manually_review_all_cases') }
    ) %>

    <%= form.govuk_collection_radio_buttons(
            :use_new_student_loan,
            [true, false],
            inline: true,
            hint: t('.hints.use_new_student_loan'),
            title: { size: :m, text: t('.labels.use_new_student_loan') }
        ) %>

    <%= form.submit(t('generic.submit'), class: 'govuk-button form-button') %>
  <% end %>
<% end %>
