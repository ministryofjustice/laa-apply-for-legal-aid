<%= page_template page_title: t(".heading_1"), back_link: :none do %>
  <%= form_with(
        model: @form,
        url: admin_settings_path,
        method: :patch,
        local: true,
      ) do |form| %>

      <% Setting::ATTRIBUTES.each do |attribute| %>
        <%= form.govuk_collection_radio_buttons(
              attribute,
              yes_no_options,
              :value,
              :label,
              inline: true,
              hint: { text: t(".hints.#{attribute}") },
              legend: { text: t(".labels.#{attribute}") },
            ) %>
      <% end %>

    <%= form.submit t("generic.submit"), class: "govuk-button" %>
  <% end %>
<% end %>
