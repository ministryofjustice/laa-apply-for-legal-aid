<h3 class="govuk-heading-m"><%= t(".section_heading") %></h3>

<% read_only = false unless local_assigns.key?(:read_only) %>

<%= govuk_summary_list(classes: "govuk-!-margin-bottom-9") do |summary_list| %>
  <%= summary_list.with_row(html_attributes: { id: "app-check-your-answers__bank_statements" }) do |row| %>
    <%= row.with_key(text: t(".bank_statement_question"), classes: "govuk-!-width-one-half") %>
    <%= row.with_value do %>
      <ul class="govuk-list">
        <% attachments_with_size(bank_statements).each do |answer| %>
          <li><%= answer %></li>
        <% end %>
      </ul>
    <% end %>
    <% unless read_only %>
      <%= row.with_action(
            text: t("generic.change"),
            href: providers_legal_aid_application_bank_statements_path(@legal_aid_application),
            html_attributes: { "aria-label": "#{t('generic.change')} #{t('.bank_statement_question')}" },
          ) %>
    <% end %>
  <% end %>
<% end %>
