<% if @legal_aid_application.separate_representation_required %>
  <section class="print-no-break govuk-!-padding-top-6">
    <h2 class="govuk-heading-l"><%= t(".heading") %></h2>

    <%= govuk_summary_card(title: t(".heading")) do |card|
          card.with_summary_list(actions: false) do |summary_list|
            summary_list.with_row(html_attributes: { id: "app-check-your-answers__separate_representation_required" }) do |row|
              row.with_key(text: t("shared.check_answers.merits.separate_representation.separate_representation"), classes: "govuk-!-width-one-third")
              row.with_value(text: t("shared.check_answers.merits.separate_representation.confirmed"))
            end
          end
        end %>
  </section>
<% end %>
