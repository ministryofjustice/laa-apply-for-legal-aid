<div class="govuk-grid-row" id="app-check-your-answers__<%= name %>">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m"><%= question %></h2>
  </div>
  <% if answers.present? %>
    <div class="govuk-grid-column-one-third  govuk-summary-list--no-border" style="text-align: right;">
      <p>
        <%= link_to(url, class: 'govuk-link') do %>
          <%= t('generic.change') %><span class="govuk-visually-hidden"><%= question %></span>
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<dl class="govuk-summary-list govuk-!-margin-bottom-9">
  <% if answers.present? %>
    <% answers.each_with_index do |answer, index| %>
      <%= content_tag(:div, class: 'govuk-summary-list__row', id: "app-check-your-answers__#{name}_#{index}") do %>
        <div class="govuk-summary-list__value" style="width: 90%; word-break: normal">
          <%= answer %>
        </div>
        <div class="govuk-summary-list__value" style="text-align: right; padding-right: 1px; word-break: normal">
            <%= t('generic.yes') %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <%= check_answer_link(
          name: name,
          url: url,
          question: question,
          answer: t('generic.non_declared')
        ) %>
  <% end %>
</dl>
