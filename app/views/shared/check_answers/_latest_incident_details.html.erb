<% if @legal_aid_application.latest_incident %>
  <section class="print-no-break">
    <%= check_answer_change_link(
          name: :incident_details,
          url: providers_legal_aid_application_date_client_told_incident_path(@legal_aid_application),
          question: t(".latest-incident-heading"),
          read_only:,
        ) %>

    <%= govuk_summary_list(card: { title: t(".latest-incident-heading") }, actions: false, classes: "govuk-!-margin-bottom-2") do |summary_list| %>
      <%= summary_list.with_row(html_attributes: { id: "app-check-your-answers__notification_of_latest_incident" }) do |row| %>
        <%= row.with_key(text: t(".notification_of_latest_incident"), classes: "govuk-!-width-one-half") %>
        <%= row.with_value(text: incident&.told_on) %>
      <% end %>
      <%= summary_list.with_row(html_attributes: { id: "app-check-your-answers__date_of_latest_incident" }) do |row| %>
        <%= row.with_key(text: t(".date_of_latest_incident"), classes: "govuk-!-width-one-half") %>
        <%= row.with_value(text: incident&.occurred_on) %>
      <% end %>
    <% end %>
  </section>
<% end %>
