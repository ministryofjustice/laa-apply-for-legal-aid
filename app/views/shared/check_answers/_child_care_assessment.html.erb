<%= summary_list.with_row do |row|
      row.with_key(text: t("shared.check_answers.child_care_assessment.assessed"), classes: "govuk-!-width-one-third")
      row.with_value(text: yes_no(child_care_assessment.assessed?))
    end %>

<% if child_care_assessment.assessed? %>
  <%= summary_list.with_row do |row|
        row.with_key(text: t("shared.check_answers.child_care_assessment.result"))
        row.with_value(text: child_care_assessment.result? ? "Positive" : "Negative")
      end %>

  <% unless child_care_assessment.result? %>
    <%= summary_list.with_row do |row|
          row.with_key(text: t("shared.check_answers.child_care_assessment.details"))
          row.with_value(text: child_care_assessment.details)
        end %>
      <% end %>
<% end %>
