<section class="print-no-break govuk-!-padding-top-6">
  <h2 class="govuk-heading-m"><%= t(".heading") %></h2>
  <%= govuk_summary_card(title: t(".heading")) do |card| %>
    <%= card.with_summary_list(actions: !read_only) do |summary_list| %>
      <%= summary_list.with_row(html_attributes: { id: "app-check-your-answers__gateway_evidence" }) do |row| %>
        <%= row.with_key(text: t(".gateway_evidence"), classes: "govuk-!-width-one-half") %>
        <%= row.with_value do %>
          <ul class="govuk-list">
            <% attachments_with_size(gateway_evidence&.original_attachments).each do |item| %>
              <li><%= item %></li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</section>
