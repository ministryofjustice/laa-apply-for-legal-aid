<%= form_with(model: @form,
              scope: :legal_aid_application,
              url: url,
              method: :patch,
              local: true) do |form| %>

    <%= form.govuk_fieldset legend: { size: 'xl', tag: 'h1', text: page_title }  do %>
    <%= form.govuk_text_field(
          :percentage_home,
          value: model.percentage_home,
          label: {text: :percentage_home, hidden: true},
          hint: {text: controller_t('percentage_home')},
          width: 5,
          suffix_text: '%'
        ) %>
    <% end %>
  <div class="govuk-!-padding-bottom-4"></div>
  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>
<% end %>
