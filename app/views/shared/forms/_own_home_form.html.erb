<%= form_with(model: @form, url: form_path, method: :patch, local: true) do |form| %>

  <%
    options = [
      { value: :mortgage,       label: t('.mortgage') },
      { value: :owned_outright, label: t('.owned_outright') },
      { value: :no,             label: t('.no') }
    ]
  %>

  <%= form.govuk_collection_radio_buttons(:own_home, options, :value, :label, title: content_for(:page_title)) %>

  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>

<% end %>
