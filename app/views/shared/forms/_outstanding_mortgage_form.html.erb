<%= form_with(model: model, scope: :legal_aid_application, url: url, method: :patch, local: true) do |form| %>

  <%= govuk_form_group(
        show_error_if: form.object.errors[:outstanding_mortgage_amount].present?,
        input: :outstanding_mortgage_amount
      ) do %>
    <%= govuk_fieldset_header controller_t('.field_set_header'), padding_below: 6 %>
    <%= form.govuk_text_field :outstanding_mortgage_amount,
                              hint: t("helpers.hint.legal_aid_application.outstanding_mortgage_amount.#{user_type}"),
                              value: number_to_currency(model.outstanding_mortgage_amount, unit: ''),
                              input_prefix: t('currency.gbp'),
                              class: 'govuk-!-width-one-third' %>
  <% end %>

  <%= render partial: 'shared/forms/next_action_buttons',
             locals: {
               continue_id: 'continue',
               show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
               form: form
             } %>

<% end %>
