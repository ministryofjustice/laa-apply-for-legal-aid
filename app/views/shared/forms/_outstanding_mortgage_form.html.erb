<%= form_with(
        builder: GOVUKDesignSystemFormBuilder::FormBuilder,
        model: model,
        scope: :legal_aid_application,
        url: url,
        method: :patch,
        local: true) do |form| %>

  <%= form.govuk_fieldset legend: { size: 'xl', tag: 'h1', text: controller_t('.field_set_header') }  do %>
    <%= form.govuk_text_field(
            :outstanding_mortgage_amount,
            label: {text: :property_value, hidden: true},
            hint: {text: t("helpers.hint.legal_aid_application.outstanding_mortgage_amount.#{journey_type}")},
            value: number_to_currency_or_original_string(model.outstanding_mortgage_amount),
            prefix_text: t('currency.gbp'),
            width: 'one-third',
            ) %>
  <% end %>

  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>

<% end %>
