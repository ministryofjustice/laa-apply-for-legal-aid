<%= form_with(
      builder: GOVUKDesignSystemFormBuilder::FormBuilder,
      model: @form,
      url: providers_legal_aid_application_success_prospects_path,
      method: :patch,
      local: true
    ) do |form| %>

  <%= form.govuk_radio_buttons_fieldset(:success_prospect, legend: {size: 'xl', text: content_for(:page_title)}) do %>
    <% MeritsAssessment.prospects_unlikely_to_succeed.each do |prospect| %>
      <%= form.govuk_radio_button :success_prospect, prospect,
                                  label: {text: t("shared.forms.success_prospect.#{prospect}")},
                                  hint: {text: t("shared.forms.success_prospect.hint.#{prospect}")} do %>
        <%= form.govuk_text_area :success_prospect_details, rows: 5 %>
      <%#= form.govuk_radio_button(:success_prospect,
                                  prospect,
                                  hint: t(".hint.#{prospect}"),
                                  label: t(".#{prospect}"),
                                  class: 'success_prospect_option',
                                  'data-aria-controls' => conditional,
                                  checked: @form.success_prospect.to_s == prospect.to_s) %>
      <% end %>
    <% end %>
  <% end %>

  <%= next_action_buttons(show_draft: true, form: form) %>
<% end %>
