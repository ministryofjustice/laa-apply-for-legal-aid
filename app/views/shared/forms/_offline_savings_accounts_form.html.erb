<%= form_with(builder: GOVUKDesignSystemFormBuilder::FormBuilder, model: @form, url: form_path, method: :patch, local: true) do |form| %>

  <%= form.govuk_fieldset legend: { size: 'xl', tag: 'h1', text: page_title } do %>

      <%= form.govuk_text_field(
              :offline_savings_accounts,
              label: {text: :offline_savings_accounts, hidden: true},
              value: number_to_currency_or_original_string(model.offline_savings_accounts),
              prefix_text: t('currency.gbp'),
              width: 'one-third'
          ) %>

  <% end %>

  <%= next_action_buttons(
          show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
          form: form
      ) %>
<% end %>
