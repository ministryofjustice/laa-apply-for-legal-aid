<div class='govuk-button-group'>
  <% if show_continue %>
    <%= form.govuk_submit(
          continue_button_text,
          id: continue_id,
          name: "continue_button",
          class: "govuk-!-display-none-print",
        ) %>
  <% end %>
  <% if show_draft %>
    <%= form.govuk_submit(
          draft_button_text,
          name: "draft_button",
          id: "draft_button",
          secondary: true,
          class: "govuk-!-display-none-print",
        ) %>
  <% end %>
</div>
