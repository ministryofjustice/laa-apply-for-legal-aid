<h1 class="govuk-heading-xl"><%= heading %></h1>

<%= form_with(model: resource || resource_name.to_s.camelcase.constantize.new, scope: resource_name, url:) do |form| %>
  <%= page_template head_title: heading, form:, template: :basic, back_link: :none do %>
    <%= form.govuk_email_field :email, label: { text: t("generic.email") }, autofocus: true, autocomplete: "email" %>
    <%= form.govuk_password_field :password, label: { text: t("generic.password") }, autocomplete: "current-password" %>

    <%= form.govuk_submit t("generic.sign_in") %>
  <% end %>
<% end %>
