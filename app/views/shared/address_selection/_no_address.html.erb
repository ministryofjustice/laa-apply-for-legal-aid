<%= page_template(
      page_title: t(".heading"),
      template: :basic,
      form:,
    ) do %>

      <h1 class="govuk-heading-xl"><%= page_title %></h1>

      <p>We could not find an address that matches <span class="govuk-!-font-weight-bold"><%= @form.model.postcode %></span>
        <% if @form.model.building_number_name.present? %>
          with a building number or name of <span class="govuk-!-font-weight-bold"><%= @form.model.building_number_name %></span>
        <% end %>
      .</p>

      <p class="govuk-body"><%= t(".paragraph_2") %></p>

      <p><%= govuk_link_to(t(".change_postcode"), providers_legal_aid_application_address_lookup_path) %></p>
      <p><%= govuk_link_to(t(".manual_address"), providers_legal_aid_application_address_path) %></p>

      <p><%= govuk_button_link_to(t("generic.save_and_come_back_later"), providers_legal_aid_applications_path, secondary: true) %></p>
<% end %>
