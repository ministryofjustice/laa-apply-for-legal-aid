<%= page_template page_title: t('.heading'), template: :basic do %>
  <%= form_with(url: providers_legal_aid_application_has_other_dependant_path, method: :patch, local: true) do |form| %>

    <%= govuk_form_group(
          show_error_if: @error,
          input: :other_dependant
        ) do %>

      <%= govuk_fieldset_header(content_for(:page_title)) %>

      <%
        options = [
          { value: :yes, label: t('generic.yes') },
          { value: :no,  label: t('generic.no') }
        ]
      %>

      <%= form.govuk_collection_radio_buttons :other_dependant, options, :value, :label, error: @error %>

    <% end %>

    <%= next_action_buttons(form: form) %>
  <% end %>
<% end %>
