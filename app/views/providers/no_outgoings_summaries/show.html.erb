<%= page_template page_title: t('.page_heading'), template: :basic do %>

  <%= form_with(
        builder: GOVUKDesignSystemFormBuilder::FormBuilder,
        url: providers_legal_aid_application_no_outgoings_summary_path,
        model: @form,
        method: :patch,
        local: true
      ) do |form| %>

      <h1 class="govuk-heading-xl"><%= page_title %></h1>

      <p class="gov-body"><%= t('.subheading.text') %></p>
      <%= list_from_translation_path('.no_outgoings_summaries.show.subheading') %>

      <div class="govuk-!-padding-bottom-2"></div>

      <%= form.govuk_radio_buttons_fieldset(:no_outgoings_summaries, legend: { text: t('.is_this_correct'), size: 'm', tag: 'h2' }) do %>
        <%= form.govuk_radio_button :no_outgoings_summaries, true, link_errors: true, label: {text: t('generic.yes')} %>
        <%= form.govuk_radio_button :no_outgoings_summaries, false, label: {text: t('.no_radio')} %>
      <% end %>

      <div class="govuk-!-padding-bottom-2"></div>

      <%= next_action_buttons_with_form(
              url: providers_legal_aid_application_no_outgoings_summary_path,
              show_draft: true
          ) %>

  <% end %>
<% end %>
