<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.apply_for_legal_aid_heading') %></h1>

    <div class="govuk-inset-text">
      <p class="govuk-body"><%= t('.must_be_provider') %></p>
      <p class="govuk-body">
        <%= link_to t('.check_legal_aid_link'), 'https://www.gov.uk/check-legal-aid' %>
        <%= t('.check_legal_aid_copy') %>
      </p>
    </div>

    <p class="govuk-body"><%= t('.apply_civil_legal_para') %></p>

    <%= list_from_translation_path '.start.index.apply_civil_legal_list' %>

    <p class="govuk-body"><%= t('.use_ccms_para') %></p>

    <h2 class="govuk-heading-m"><%= t('.use_ccms_list.heading') %></h2>

    <p class="govuk-body"><%= t('.use_ccms_list.title') %></p>

    <%= list_from_translation_path '.start.index.use_ccms_list' %>

    <%= link_to t('generic.start'), providers_legal_aid_applications_path, class: 'govuk-button govuk-button--start', id: 'start' %>

  </div>

  <div class="govuk-grid-column-one-third">

  <div class="govuk-header__container govuk-width-container"></div>

  <div class="govuk-!-padding-bottom-4"></div>

  <h3 class="govuk-heading-m"><%= t('.related_content_list.title') %></h3>
  <ul class="govuk-list">
    <li>
      <%= link_to t('.related_content_list.item_1'), 'https://www.gov.uk/legal-aid', class: 'govuk-link govuk-body govuk-!-font-size-16' %>
    </li>
    <li>
      <%= link_to t('.related_content_list.item_2'), 'https://www.gov.uk/check-legal-aid', class: 'govuk-link govuk-body govuk-!-font-size-16' %>
    </li>
  </ul>
  </div>
</div>
