<%= form_with(model: @form,
              url: providers_legal_aid_application_home_address_different_address_reason_path,
              method: :patch,
              local: true) do |form| %>
  <%= page_template page_title: t(".heading"), template: :basic, form: do %>

    <%= form.govuk_radio_buttons_fieldset(:no_fixed_residence, legend: { size: "xl", text: t(".heading"), tag: "h1" }) do %>
      <%= form.govuk_radio_button :no_fixed_residence, false, label: { text: t(".options.different_home_address") }, link_errors: true %>
      <%= form.govuk_radio_button :no_fixed_residence, true, label: { text: t(".options.no_fixed_residence") }, link_errors: false %>
    <% end %>

    <%= next_action_buttons(
          show_draft: true,
          form:,
        ) %>
  <% end %>
<% end %>
