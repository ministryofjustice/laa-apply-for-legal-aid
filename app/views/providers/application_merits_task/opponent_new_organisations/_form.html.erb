<%= form_with(
      model: @form,
      url: form_path,
      method: :patch,
      local: true,
    ) do |form| %>
  <%= form.govuk_text_field(
        :name,
        label: { text: t(".name") },
        class: "govuk-input--width-20",
      ) %>

  <%= form.govuk_collection_select :organisation_type_ccms_code,
                                   @form.organisation_types,
                                   :ccms_code,
                                   :description,
                                   label: { text: t(".type") } %>

  <%= next_action_buttons(show_draft: true, form:) %>
<% end %>
