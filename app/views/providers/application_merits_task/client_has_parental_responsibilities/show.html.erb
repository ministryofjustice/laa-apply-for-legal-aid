<%= form_with(model: @form,
              url: providers_legal_aid_application_client_has_parental_responsibility_path,
              method: :patch,
              local: true) do |form| %>
  <%= page_template page_title: t(".page_title"), template: :basic, form: do %>
    <% options = [
         [:court_order, t(".choice_one")],
         [:parental_responsibility_agreement, t(".choice_two")],
         [false, t(".choice_three")],
       ] %>
    <%= form.govuk_collection_radio_buttons :relationship_to_children,
                                            options,
                                            :first,
                                            :second,
                                            legend: { text: page_title, tag: "h1", size: "xl" } do %>
                                              <p class="govuk-body"><%= t(".paragraph") %></p>
                                            <% end %>
    <%= next_action_buttons show_draft: true, form: %>
  <% end %>
<% end %>
