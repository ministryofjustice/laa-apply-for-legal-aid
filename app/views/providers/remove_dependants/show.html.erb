<%= page_template page_title: t('.page_title', name: @dependant.name), template: :basic do %>

  <%= form_with(
          url: providers_legal_aid_application_remove_dependant_path,
          model: @form,
          method: :patch,
          local: true
      ) do |form| %>

    <%= form.govuk_collection_radio_buttons :remove_dependant,
                                            yes_no_options,
                                            :value,
                                            :label,
                                            legend: {text: content_for(:page_title), tag: 'h1', size: 'xl'} %>

    <%= next_action_buttons(form: form) %>
  <% end %>
<% end %>
