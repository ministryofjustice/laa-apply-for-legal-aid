 <%= form_with(
        model: @form,
        url: providers_legal_aid_application_used_delegated_functions_path,
        method: :patch,
        local: true
      ) do |form| %>

  <%= page_template page_title: t('.heading'),  template: :basic, form: form do %>

    <% proceeding = @legal_aid_application.application_proceedings_by_name.first %>
    <%= form.govuk_radio_buttons_fieldset(:used_delegated_functions, legend: {text: t('.heading'), tag: 'h1', size: 'xl'}) do %>
      <%= form.govuk_radio_button(:used_delegated_functions, true, label: {text: t('generic.yes')} ) do %>
        <%= form.govuk_date_field :"#{proceeding.name}_used_delegated_functions_on",
                                  legend: { text: t("shared.forms.date_input_fields.used_delegated_functions_on_label") },
                                  hint: { text: t("shared.forms.date_input_fields.used_delegated_functions_on_hint", options: number_of_days_ago(5))} %>
      <% end %>

      <%= form.govuk_radio_button(:used_delegated_functions, false, label: {text:  t('generic.no')} ) %>

    <% end %>

    <%= next_action_buttons(
          form: form,
          show_draft: true
        ) %>
  <% end %>
<% end %>
