<%= form_with(
      model: @form,
      url: providers_merits_task_list_opponents_application_path(@proceeding),
      method: :patch,
      local: true
    ) do |form| %>
  <%= page_template(page_title: t('.h1_heading'),
                    template: :basic,
                    back_link: {},
                    form: form) do %>
    <%= form.govuk_radio_buttons_fieldset :opponents_application, legend: {size: 'xl', tag: 'h1', text: page_title}, classes: "govuk-!-padding-bottom-4" do %>
      <%= form.govuk_radio_button :opponents_application, true, link_errors: true, label: {text: t('generic.yes')} %>
      <%= form.govuk_radio_button :opponents_application, false, label: {text: t('generic.no')} do %>
        <%= form.govuk_text_area :details, label: {text: t('.reason_question')}, rows: 5 %>
      <% end %>
    <% end %>

    <%= next_action_buttons(show_draft: true, form: form) %>
  <% end %>
<% end %>
