<%= page_template(
      page_title: t('.h1-heading'),
      template: :basic
    ) do %>

  <%= form_with(
        builder: GOVUKDesignSystemFormBuilder::FormBuilder,
        model: @form,
        url: providers_legal_aid_application_proceeding_merits_task_attempts_to_settle_path(@legal_aid_application, @application_proceeding_type),
        method: :patch,
        local: true
      ) do |form| %>

    <%= form.govuk_fieldset legend: {size: 'xl', tag: 'h1', text: page_title},
                            caption: { text: @application_proceeding_type.proceeding_type.meaning, size: 'xl' } do %>
      <%= form.govuk_text_area(
          :attempts_made,
          label: nil,
          hint: { text: t('.hint-text') },
          class: 'govuk-!-width-one-third',
          legend: {text: content_for(:page_title), tag: 'h1', size: 'xl'},
          rows: 8
        ) %>
    <% end %>
    <%= form.hidden_field :application_proceeding_type_id, value: @application_proceeding_type.id %>
    <div class="govuk-!-padding-bottom-2"></div>

    <%= next_action_buttons(show_draft: true, form: form) %>
  <% end %>
<% end %>
