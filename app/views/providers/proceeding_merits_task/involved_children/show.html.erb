<%= form_with(
      url: providers_merits_task_list_involved_child_path(@legal_aid_application, @application_proceeding_type),
      method: :patch,
      local: true
    ) do |form| %>

  <%= form.govuk_check_boxes_fieldset :involved_children, legend: {size: 'xl', tag: 'h1', text: page_title} do %>
    <span id="select-all-that-apply-hint" class="govuk-hint"><%= t('generic.select_all_that_apply') %></span>

    <% @involved_children.each do |child| %>
      <%= form.govuk_check_box child[:name], true, '', multiple: false, link_errors: true, label: {text: child[:name]}, checked: child[:is_checked] %>
    <% end %>
  <% end %>

  <%= next_action_buttons(
        form: form,
        show_draft: true
      ) %>
<% end %>
