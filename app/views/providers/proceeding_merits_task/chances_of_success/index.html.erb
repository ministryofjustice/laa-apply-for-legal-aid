<%= page_template(
      page_title: t('.h1-heading'),
      template: :basic,
      back_link: { path: providers_legal_aid_application_statement_of_case_path(@legal_aid_application) }
    ) do %>
  <%= form_with(
        model: @form,
        url: providers_merits_task_list_chances_of_success_index_path,
        method: :post,
        local: true
      ) do |form| %>

    <%= form.govuk_collection_radio_buttons(
          :success_likely,
          yes_no_options,
          :value,
          :label,
          legend: {size: 'xl', tag: 'h1', text: content_for(:page_title)}
        ) %>

    <%= next_action_buttons(show_draft: true, form: form) %>
  <% end %>
<% end %>
