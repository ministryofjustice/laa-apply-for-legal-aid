<li class="app-task-list__item">
  <span class="app-task-list__task-name">
    <% formatted_name = t(".#{name}") %>
    <% if status != 'Cannot start yet' %>
      <a href="<%= url %>" aria-describedby='<%= name %>-status'><%= formatted_name %></a>
    <% else %>
      <p><%= formatted_name %></p>
    <% end %>
  </span>
  <strong class="govuk-tag <%= tag_class %> app-task-list__tag" id="<%= name %>_status"><%= t(".states.#{status}") %></strong>
</li>
