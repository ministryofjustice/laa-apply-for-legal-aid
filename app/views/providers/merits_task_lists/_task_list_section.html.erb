<li>
  <h2 class="app-task-list__section">
    <span class="app-task-list__section-number"><%= section_number %>.</span>
    <%= name %>
  </h2>
  <ul class="app-task-list__items">
    <% tasks.each do |task| %>
      <% next if task.state.eql?(:ignored) %>
      <%= task_list_item(
            name: task.name,
            status: task.state,
            legal_aid_application: @legal_aid_application,
            ccms_code:,
          ) %>
    <% end %>
  </ul>
</li>
