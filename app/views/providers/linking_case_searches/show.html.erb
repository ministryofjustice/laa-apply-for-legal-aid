<%= form_with(
      url: providers_legal_aid_application_linking_case_search_path,
      model: @form,
      method: :patch,
      local: true,
    ) do |form| %>

  <%= page_template page_title: t(".heading"), template: :basic, form: do %>
    <%= form.govuk_text_field :search_ref,
                              label: { text: t(".heading"), size: "xl", tag: "h1" },
                              hint: { text: t(".hint") },
                              width: 10,
                              value: params["search_ref"] || "" %>

    <%= next_action_buttons(form:, continue_button_text: t(".search")) %>
  <% end %>
<% end %>
