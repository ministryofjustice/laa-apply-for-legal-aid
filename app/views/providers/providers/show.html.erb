<%= page_template(
      page_title: t(".page_title"),
      back_link: :none,
    ) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <%= govuk_table do |table|
          table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t(".page_title"))

          table.with_body do |body|
            body.with_row do |row|
              row.with_cell(header: true, text: t("providers.providers.show.name"))
              row.with_cell(text: @provider.name)
            end

            body.with_row do |row|
              row.with_cell(header: true, text: t("providers.providers.show.email"))
              row.with_cell(text: @provider.email)
            end

            if %i[development uat staging].include?(HostEnv.environment)
              body.with_row do |row|
                row.with_cell(header: true, text: t("providers.providers.show.ccms_username"))
                row.with_cell(text: @ccms_user_details["userName"])
              end
              body.with_row do |row|
                row.with_cell(header: true, text: t("providers.providers.show.ccms_contact_id"))
                row.with_cell(text: @ccms_user_details["userPartyId"])
              end
            end
          end
        end %>
  </div>
</div>
