<% partner = individual == "Partner" %>
<h2 class="govuk-heading-m"><%= t(".title") %></h2>

<%= govuk_table do |table|
      table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t(".table_caption"))

      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, text: t("providers.capital_income_assessment_results.disposable_income.type_of_disposable_income"))
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, numeric: true, text: t("providers.capital_income_assessment_results.disposable_income.amount"))
        end
      end

      table.with_body do |body|
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.disposable_income.total_income"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_monthly_income_including_employment_income(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.disposable_income.total_outgoings"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_monthly_outgoings_including_tax_and_ni(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.disposable_income.total_deductions"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_deductions_including_fixed_employment_allowance))
        end
      end

      table.with_foot do |foot|
        foot.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.disposable_income.total_disposable"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_disposable_income_assessed(partner:)))
        end
      end
    end %>
