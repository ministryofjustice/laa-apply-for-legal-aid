<% partner = individual == "Partner" %>
<h2 class="govuk-heading-m"><%= t(".title", individual:) %></h2>

<%= govuk_table do |table|
      table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t(".table_caption"))

      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, text: t("providers.capital_income_assessment_results.employment_income.income_type"))
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, numeric: true, text: t("providers.capital_income_assessment_results.employment_income.amount"))
        end
      end

      table.with_body do |body|
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.employment_income.monthly_income_before_tax"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.employment_income_gross_income(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.employment_income.benefits_in_kind"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.employment_income_benefits_in_kind(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.employment_income.tax"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.employment_income_tax(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.employment_income.national_insurance"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.employment_income_national_insurance(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.employment_income.fixed_employment_deduction"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.employment_income_fixed_employment_deduction(partner:)))
        end
      end

      table.with_foot do |foot|
        foot.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.employment_income.total"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.employment_income_net_employment_income(partner:)))
        end
      end
    end %>
