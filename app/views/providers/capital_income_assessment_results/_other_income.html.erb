<% partner = individual == "Partner" %>
<h2 class="govuk-heading-m">
  <%= @cfe_result.jobs? ? t(".title", individual:) : t(".income", individual:) %>
</h2>

<%= govuk_table do |table|
      table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t(".table_caption"))

      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, text: t("providers.capital_income_assessment_results.other_income.type_of_income"))
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, numeric: true, text: t("providers.capital_income_assessment_results.other_income.amount"))
        end
      end

      table.with_body do |body|
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.benefits"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.monthly_state_benefits(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.friends_or_family"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.mei_friends_or_family(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.maintenance"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.mei_maintenance_in(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.property_or_lodger"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.mei_property_or_lodger(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.student_finance"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.mei_student_loan(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.pension"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.mei_pension(partner:)))
        end
      end

      table.with_foot do |foot|
        foot.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.other_income.total"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_monthly_income(partner:)))
        end
      end
    end %>
