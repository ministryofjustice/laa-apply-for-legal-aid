<% partner = @legal_aid_application.applicant.has_partner_with_no_contrary_interest? %>
<h2 class="govuk-heading-m"><%= t(".title") %></h2>

<%= govuk_table do |table|
      table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t(".table_caption"))

      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, text: t("providers.capital_income_assessment_results.deductions.type_of_deduction"))
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, numeric: true, text: t("providers.capital_income_assessment_results.deductions.amount"))
        end
      end

      table.with_body do |body|
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.deductions.dependants_allowance"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.dependants_allowance))
        end
        if @legal_aid_application.applicant.has_partner_with_no_contrary_interest?
          body.with_row do |row|
            row.with_cell(header: true, text: t("providers.capital_income_assessment_results.deductions.partner_allowance"))
            row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.partner_allowance))
          end
        end
      end

      table.with_foot do |foot|
        foot.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.deductions.total_deductions"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_deductions))
        end
      end
    end %>
