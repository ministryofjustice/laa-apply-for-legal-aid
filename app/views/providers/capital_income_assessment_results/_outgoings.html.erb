<% partner = individual == "Partner" %>
<h2 class="govuk-heading-m"><%= t(".title", individual:) %></h2>

<%= govuk_table do |table|
      table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t(".table_caption"))

      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, text: t("providers.capital_income_assessment_results.outgoings.type_of_outgoing"))
          row.with_cell(html_attributes: { class: "govuk-visually-hidden" }, numeric: true, text: t("providers.capital_income_assessment_results.outgoings.amount"))
        end
      end

      table.with_body do |body|
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.outgoings.housing_costs"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.moe_housing(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.outgoings.childcare_costs"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.moe_childcare(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.outgoings.maintenance_out"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.moe_maintenance_out(partner:)))
        end
        body.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.outgoings.legal_aid"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.moe_legal_aid(partner:)))
        end
      end

      table.with_foot do |foot|
        foot.with_row do |row|
          row.with_cell(header: true, text: t("providers.capital_income_assessment_results.outgoings.total_outgoings"))
          row.with_cell(numeric: true, text: gds_number_to_currency(@cfe_result.total_monthly_outgoings(partner:)))
        end
      end
    end %>
