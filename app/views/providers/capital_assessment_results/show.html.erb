<%= page_template(
      page_title: t(".page_title", result: t(".result.#{@cfe_result.assessment_result}")),
      template: :basic,
      column_width: :full,
    ) do %>

  <%= moj_interruption_card(heading: t("shared.assessment_results.#{@result_partial}.heading", name: @legal_aid_application.applicant_full_name)) do |card| %>
    <% card.with_body do %>
      <%= render "shared/assessment_results/#{@result_partial}" %>
    <% end %>
  <% end %>

  <%= render "result_details" %>

  <%= next_action_buttons_with_form(
        url: providers_legal_aid_application_capital_assessment_result_path(@legal_aid_application),
        method: :patch,
        show_draft: true,
      ) %>
<% end %>
