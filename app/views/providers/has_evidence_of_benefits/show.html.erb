<% page_title = @legal_aid_application.shared_benefit_with_applicant? ? t(".h1_partner", passporting_benefit: @passporting_benefit) : t(".h1_no_partner", passporting_benefit: @passporting_benefit) %>

<%= form_with(
      model: @form,
      url: providers_legal_aid_application_has_evidence_of_benefit_path,
      method: :patch,
      local: true,
    ) do |form| %>

    <%= page_template(
          page_title:,
          template: :basic,
          form:,
        ) do %>

      <%= form.govuk_collection_radio_buttons :has_evidence_of_benefit,
                                              yes_no_options(yes: t(".radio_hint_yes")),
                                              :value,
                                              :label,
                                              :radio_hint,
                                              bold_labels: false,
                                              legend: { text: content_for(:page_title), tag: "h1", size: "xl" },
                                              hint: { text: t(".evidence_hint") } %>

      <%= next_action_buttons(show_draft: true, form:) %>
  <% end %>
<% end %>
