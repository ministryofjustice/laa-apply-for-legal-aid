<%= page_template(page_title: t(".h1-heading")) do %>
  <p class="govuk-body"><%= t(".statement") %></p>
  <ul class="govuk-list govuk-list--bullet">
    <%- t(".statement-bullets").each do |bullet| %>
      <li><%= bullet %></li>
    <% end %>
  </ul>

  <% if ENV.fetch("EDITABLE_APPLICATIONS", "false") == "true" %>
     <%= next_action_buttons_with_form(
           url: providers_legal_aid_application_task_list_path(TaskList::StartPageCollection::NEW_RECORD),
           method: :post,
           show_draft: false,
           continue_button_text: t(".continue_button"),
         ) %>
  <% else %>
    <%= next_action_buttons_with_form(
          url: providers_legal_aid_applications_path,
          method: :post,
          show_draft: false,
          continue_button_text: t(".continue_button"),
        ) %>
  <% end %>
<% end %>
