<%= form_with(
      url: providers_legal_aid_application_change_of_names_path,
      model: @form,
      method: :patch,
      local: true,
    ) do |form| %>
  <%= page_template page_title: t(".heading"), form:, template: :basic do %>
    <%= form.govuk_collection_radio_buttons :change_of_name,
                                            yes_no_options,
                                            :value,
                                            :label,
                                            legend: { text: content_for(:page_title), size: "xl", tag: "h1" },
                                            caption: { text: @proceeding.meaning, size: "xl" } do %>
    <% end %>

    <%= next_action_buttons(show_draft: true, form:) %>
  <% end %>
<% end %>
