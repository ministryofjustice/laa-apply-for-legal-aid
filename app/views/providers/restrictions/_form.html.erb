<%= form_with(
        builder: GOVUKDesignSystemFormBuilder::FormBuilder,
        model: model, url: url, method: :patch, local: true) do |form| %>

  <%= form.govuk_radio_buttons_fieldset(:has_restrictions,
                                        legend: { size: 'xl', tag: 'h1', text: page_title},
                                        hint: {text: list_from_translation_path(".restrictions.show.examples") }) do %>
    <%= form.govuk_radio_button :has_restrictions, true, label: { text: t('generic.yes') } do %>
      <%= form.govuk_text_area :restrictions_details,
                               label: { text: details }, rows: 5 %>
    <% end %>
    <%= form.govuk_radio_button :has_restrictions, false, label: { text: t('generic.no') } %>
  <% end %>

  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>
<% end %>
