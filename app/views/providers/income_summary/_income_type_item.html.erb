<% transaction_link = govuk_link_to(
     link_text,
     providers_legal_aid_application_incoming_transactions_path(transaction_type: name),
     class: "govuk-body transaction-type-link",
     "aria-label": "for #{t "transaction_types.names.providers.#{name}"}",
   ) %>
<% form_group_error_class = error.present? ? "govuk-form-group--error" : "" %>
<% error_message = error.present? ? error.first : "" %>

<li id="<%= name.to_s %>" class="<%= form_group_error_class %>">
  <h2 class="display-table govuk-heading-m">
    <% if display_number %>
      <span class="sort-transactions__section-number"><%= number %>. </span>
    <% else %>
      <span class="sort-transactions__section-number"><%= "" %> </span>
    <% end %>

    <%= t("transaction_types.names.providers.#{name}") %>
    <% if error_message %>
      <p id='<%= "error-#{name}" %>' class="govuk-error-message govuk-!-padding-top-2"><%= error_message %></p>
    <% end %>
  </h2>
  <%= content_tag(:div, class: "govuk-!-padding-bottom-9 govuk-!-padding-left-0", id: "list-item-#{name}") do %>
    <% if bank_transactions.present? %>
      <%= render "providers/bank_transactions/list_selected", category: name, bank_transactions: %>
      <%= transaction_link %>
    <% else %>
      <p class="sort-transactions__item">
        <%= transaction_link %>
      </p>
    <% end %>
  <% end %>
</li>
