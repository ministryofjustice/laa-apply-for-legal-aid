<%= form_with(
        model: model,
        scope: :legal_aid_application,
        url: url,
        method: :patch,
        local: true) do |form| %>

  <%= form.govuk_fieldset legend: { size: 'xl', tag: 'h1', text: page_title }  do %>
    <%= form.govuk_text_field(
          :property_value,
          label: {text: :property_value, hidden: true},
          hint: {text: t('.hint.property_value')},
          value: number_to_currency_or_original_string(model.property_value),
          prefix_text: t('currency.gbp'),
          width: 'one-third',
        ) %>
  <% end %>

  <%= next_action_buttons(
        show_draft: local_assigns.key?(:show_draft) ? show_draft : false,
        form: form
      ) %>

<% end %>
