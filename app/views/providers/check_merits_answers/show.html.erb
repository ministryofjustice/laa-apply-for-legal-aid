<%= page_template(
      page_title: t('.h1-heading'),
      back_link: { path: reset_providers_legal_aid_application_check_merits_answers_path(@legal_aid_application), method: :patch }
    ) do %>

  <h2 class="govuk-heading-m">
    <%= t '.respondent-heading' %>
  </h2>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :understands_terms_of_court_order,
          url: providers_legal_aid_application_respondent_path(anchor: :understands_terms_of_court_order),
          question: t('.items.understands_terms_of_court_order'),
          answer: yes_no(@respondent.understands_terms_of_court_order)
        ) %>
  </dl>
  <div class='govuk-body'><%= simple_format @respondent.understands_terms_of_court_order_details %></div>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :warning_letter_sent,
          url: providers_legal_aid_application_respondent_path(anchor: :warning_letter_sent),
          question: t('.items.warning_letter_sent'),
          answer: yes_no(@respondent.warning_letter_sent)
        ) %>
  </dl>
  <div class='govuk-body'><%= simple_format @respondent.warning_letter_sent_details %></div>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :police_notified,
          url: providers_legal_aid_application_respondent_path(anchor: :police_notified),
          question: t('.items.police_notified'),
          answer: yes_no(@respondent.police_notified)
        ) %>
  </dl>
  <div class='govuk-body'><%= simple_format @respondent.police_notified_details %></div>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :bail_conditions_set,
          url: providers_legal_aid_application_respondent_path(anchor: :bail_conditions_set),
          question: t('.items.bail_conditions_set'),
          answer: yes_no(@respondent.bail_conditions_set)
        ) %>
  </dl>
  <div class='govuk-body'><%= simple_format @respondent.bail_conditions_set_details %></div>

  <div class="govuk-!-padding-bottom-6"></div>

  <h2 class="govuk-heading-m">
    <%= t '.merits-heading' %>
  </h2>

  <div class='govuk-body'><%= simple_format @merits.details_of_proceedings_before_the_court %></div>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :statement_of_case,
          url: providers_legal_aid_application_statement_of_case_path,
          question: t('.items.statement_of_case'),
          answer: nil
        ) %>
  </dl>

  <div class='govuk-body'><%= simple_format @statement_of_case.statement %></div>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :estimated_legal_costs,
          url: providers_legal_aid_application_estimated_legal_costs_path,
          question: t('.items.estimated_legal_costs'),
          answer: number_to_currency(@merits.estimated_legal_cost, unit: t('currency.gbp'))
        ) %>

    <%= check_answer_link(
          name: :prospects_of_success,
          url: providers_legal_aid_application_success_prospects_path,
          question: t('.items.prospects_of_success'),
          answer: t("shared.forms.success_prospect.success_prospect_item.#{@merits.success_prospect}")
        ) %>
  </dl>

  <div class='govuk-body'><%= simple_format @merits.success_prospect_details %></div>

  <dl class="govuk-summary-list govuk-!-margin-bottom-9">
    <%= check_answer_link(
          name: :client_declaration,
          url: providers_legal_aid_application_merits_declaration_path,
          question: t('.items.client_declaration'),
          answer: (t('.items.client_declaration_answer') if @merits.client_merits_declaration)
        ) %>
  </dl>

  <div class="govuk-!-padding-bottom-6"></div>

  <h2 class="govuk-heading-m">
    <%= t '.complete-application-heading' %>
  </h2>

  <p class="govuk-body">
    <%= t '.complete-application-text' %>
  </p>

  <%= next_action_buttons_with_form(
        url: continue_providers_legal_aid_application_check_merits_answers_path(@legal_aid_application),
        method: :patch,
        show_draft: true,
        continue_button_text: t('generic.accept_and_send')
      ) %>

<% end %>
